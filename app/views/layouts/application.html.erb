<!DOCTYPE html>
<html>

	<head>
	  <title>OpenDebate</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>

	<body>		
		<div class="navbar navbar-fixed-top">
			
			<div class="navbar-inner">
				<div class="container"> 
					<div class="container-fluid">
  						<div class="row-fluid">
    					
  						</div>
					</div>
					<a href="#" class="brand">OpenDebate</a>
					<div class="navbar-inner">
						<% if current_user %>
							<div style="float: right;">  Logged in as: <%= current_user.email%> 
			    			<%= link_to(' Logout', destroy_user_session_path, :method => :delete) %>
			  			</div>
		  			<%end%>

						<ul class="nav">
							<li><%= link_to "All debates", all_debates_path %></li>
		          <li><%= link_to "Trending debates", debates_path %></li>
		          <li><%= link_to "Hot debates", hot_debates_path %></li>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<div class="container">
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>

			<%= yield %>
		</div>

	</body>
</html>

